(ns cljs-for-js-devs.messages-styles)

(def message-style
  {:display "table-row"
   :color "#121212"
   :font-size "12px"})

(def avatar-style 
  {:display "inline-block"
  :font-size "1.5em"
  :width "2em"
  :height "2em"
  :line-height "2em"
  :text-align "center"
  :border "2px solid #00c19e"
  :border-radius "50%"
  :vertical-align "middle"
  :margin-right "1em"
  :color "#00c19e"
})

(def username-style
  {:font "bold 12px/15px Lato, sans-serif"
   :margin-right "10px"})

(def timestamp-style
  {:font "normal 12px/15px Lato, sans-serif"
   :color "#bdbec0"
   :border-left "1px solid #bdbec0"
   :margin-right "10px"
   :padding-left "10px"})

(def text-style
  {:font "normal 12px/15px Lato, sans-serif"})

(def lt-col-style
  {:display "table-cell"
   :width "10%"})

(def rt-col-style
  {:display "table-cell"
   :width "90%"})