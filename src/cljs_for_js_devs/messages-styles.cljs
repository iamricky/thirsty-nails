(ns cljs-for-js-devs.messages-styles)

(def message-style
  {:color "#121212"
   :margin "0 auto"
   :padding "20px 0 0"
   :display "block"
   :width "90%"
   :font-size "12px"})

(def username-style
  {:font "bold 12px/15px Lato, sans-serif"
   :margin-right "10px"})

(def timestamp-style
  {:font "normal 12px/15px Lato, sans-serif"
   :color "#bdbec0"
   :border-left "1px solid #bdbec0"
   :margin-right "10px"
   :padding-left "10px"})

(def text-style
  {:font "normal 12px/15px Lato, sans-serif"})
